<Window x:Class="ExtrateWares.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtrateWares"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AlienWares" Height="615" Width="540">
    <Canvas x:Name="canvasJuego" Focusable="True" Background="Black" KeyDown="alPulsar" KeyUp="alLevantar" Width="540">
